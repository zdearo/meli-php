{
    "name": "zdearo/meli-php",
    "description": "A simple and efficient PHP SDK for integrating with the Mercado Libre API, providing methods for authentication, product listing, orders, and other essential operations.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Zdearo\\Meli\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Adryel Zanetti Dearo",
            "email": "dearo.adryel@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "7.9",
        "ext-json": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.20",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "mockery/mockery": "^1.5"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Zdearo\\Meli\\Providers\\MeliServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
